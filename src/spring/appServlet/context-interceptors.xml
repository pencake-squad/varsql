	<!-- language interceptor -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/database/**" />
			<bean id="databaseAuthInterceptor" class="com.varsql.web.common.interceptor.DatabaseAuthInterceptor">
			</bean>
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean id="localeChangeInterceptor"
				class="com.varsql.web.common.interceptor.LanguageInterceptor">
				<property name="paramName" value="locale"></property>
			</bean>
		</mvc:interceptor>
	</mvc:interceptors>
	
</beans>